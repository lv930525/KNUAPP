<?xml version='1.5.6' encoding='utf-8'?>
<widget id="tw.edu.knu.app" version="1.5.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>開南大學</name>
    <description>
        KAINAN UNIVERSITY
    </description>
    <author email="itc_app@mail.knu.edu.tw" href="http://itc.knu.edu.tw">
        KAINAN UNIVERSITY ITC
    </author>
    <content src="index.html" />
	<plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<preference name="Orientation" value="portrait" />
	<icon src="res/icon/android/drawable-xxxhdpi/ic_launcher.png" />
    <platform name="android">
        <allow-intent href="market:*" />
		<icon src="res/icon/android/drawable-ldpi/ic_launcher.png" density="ldpi" />
		<icon src="res/icon/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
		<icon src="res/icon/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
		<icon src="res/icon/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
		<icon src="res/icon/android/drawable-xxhdpi/ic_launcher.png" density="xxhdpi" />
		<icon src="res/icon/android/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
		<splash src="res/slpash/android/Loading.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
		<splash src="res/slpash/iOS/Default.png" width="320" height="480"/>
		<splash src="res/slpash/iOS/Default@2x.png" width="640" height="960"/>
		<splash src="res/slpash/iOS/Default-568h@2x.png" width="640" height="1136"/>
		<splash src="res/slpash/iOS/Default-667h@2x.png" width="750" height="1334"/>
		<splash src="res/slpash/iOS/Default-736h@3x.png" width="1242" height="2208"/>
    </platform>
</widget>

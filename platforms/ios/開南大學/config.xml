<?xml version='1.0' encoding='utf-8'?>
<widget id="tw.edu.knu.app" version="1.5.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <feature name="Device">
        <param name="ios-package" value="CDVDevice" />
    </feature>
    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature>
    <feature name="AppVersion">
        <param name="ios-package" value="AppVersion" />
    </feature>
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <splash height="480" src="res/slpash/iOS/Default.png" width="320" />
    <splash height="960" src="res/slpash/iOS/Default@2x.png" width="640" />
    <splash height="1136" src="res/slpash/iOS/Default-568h@2x.png" width="640" />
    <splash height="1334" src="res/slpash/iOS/Default-667h@2x.png" width="750" />
    <splash height="2208" src="res/slpash/iOS/Default-736h@3x.png" width="1242" />
    <name>開南大學</name>
    <description>
        KAINAN UNIVERSITY
    </description>
    <author email="itc_app@mail.knu.edu.tw" href="http://itc.knu.edu.tw">
        KAINAN UNIVERSITY ITC
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <icon src="res/icon/android/drawable-xxxhdpi/ic_launcher.png" />
</widget>
